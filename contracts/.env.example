# Environment Variables for EthSpenda Smart Contracts

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
LISK_RPC_URL=https://rpc.api.lisk.com
LISK_SEPOLIA_RPC_URL=https://rpc.sepolia-api.lisk.com

# API Keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
LISK_API_KEY=your_lisk_api_key

# Gas reporting
REPORT_GAS=true

# Oracle configurations
CHAINLINK_ETH_USD_FEED_ETHEREUM=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419
CHAINLINK_ETH_USD_FEED_BASE=0x71041dddad3595F9CEd3DcCFBe3D1F4b0a16Bb70
CHAINLINK_ETH_USD_FEED_LISK=0x0000000000000000000000000000000000000000

# Fee configurations
PLATFORM_FEE_BASIS_POINTS=0
MAX_FEE_BASIS_POINTS=500

# Mobile money provider configurations
MOBILE_MONEY_PROVIDERS=mpesa,airtel,opay,kuda,mtn
